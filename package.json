{
  "name": "mdx-backend-api",
  "version": "1.0.0",
  "description": "Backend API for the MDX Agent Operations Dashboard",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run prisma:generate && npx prisma migrate deploy && npm start",
    "start:prod:reset": "npm run prisma:generate && npx prisma migrate reset --force --skip-generate && npm start",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [
    "api",
    "dashboard",
    "openclaw"
  ],
  "author": "Clawd",
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^5.18.0",
    "fastify": "^4.28.0",
    "pg": "^8.12.0",
    "redis": "^4.6.15"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
